{% extends ':site:index.html.twig' %}
{% block header %}
    <div class="headerConnexion" id="header-home">
        <img class="header-img" src="{{asset('./images/fond-home.jpg')}}" />
        <div class="titre">
            <img class="img-responsive"src="{{asset('./images/visu-logo-home.png')}}" />
        </div>
    </div>

{% endblock %}
{% block section %}
    
    {#Page pour se connecter#}
    
    <div class="titre-connexion">
        <h1>Connexion</h1>
    </div>
    <div class="imagelogin">

        <div class="content-connexion">
            {#Champ pour mettre l'email#}
            <form action="{{path('loginCheck',{}) }}" method="post">
                <div class="form-group">
                    <label for="inputEmail" class="col-xs-12 control-label"></label>
                    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            <input type="text" id="nom" name="_username" placeholder="Nom d'utilisateur" class="form-control" value=""/>
                        </div>
                    </div>
                </div>

                {#Champ pour mettre le mot de passe#}

                <div class="form-group">
                    <label for="inputPassword" class="col-xs-12 control-label"></label>
                    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            <input type="password" id="pass" name="_password" placeholder="Mot de passe" class="form-control" value=""/>
                        </div>
                    </div>
                </div>
                    {#Bouton connexion#}
                
                    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1">
                        <div class="form-group">
                            <div class="boutonConnexion">
                                <input type="submit" class="btn btn-default" value="connexion" />
                            </div>
                        </div>
                    </div>
            </form>
        </div>


    </div>
{% endblock %}